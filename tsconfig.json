{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "types": ["@webgpu/types", "jest"],
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
  },
  "typedocOptions": {
  "entryPoints": ["./src/**.ts"],
    "out": "dist/docs"
  }
}